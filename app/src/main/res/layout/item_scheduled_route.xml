<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools">

	<data>

		<variable
			name="route"
			type="com.faciee.cti.valbastrelu.eticket.room.entities.Route" />
	</data>

	<androidx.constraintlayout.widget.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/feeditem_outside_margin"
		android:background="@drawable/background_white_rouned_corners"
		android:padding="@dimen/feeditem_inside_padding">

		<ImageView
			android:id="@+id/iconRouteType"
			android:layout_width="48dp"
			android:layout_height="48dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:transportIcon="@{route.transportType.getTransportTypeIcon()}"
			app:srcCompat="@drawable/ic_bus" />

		<TextView
			android:id="@+id/labelRouteName"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="8dp"
			android:layout_marginEnd="8dp"
			android:textAppearance="@style/TextAppearance.AppCompat.Body2"
			app:layout_constraintBottom_toTopOf="@+id/labelRouteTime"
			app:layout_constraintEnd_toStartOf="@+id/labelRouteNumber"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toEndOf="@+id/iconRouteType"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintVertical_bias="0.0"
			app:layout_constraintVertical_chainStyle="packed"
			android:text="@{@string/route_name_fmt(route.transportType.typeName)}"
			tools:text="Statie: Micro 19-Cinema Dacia" />

		<TextView
			android:id="@+id/labelRouteNumber"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@{String.valueOf(route.number)}"
			android:textAppearance="@style/TextAppearance.AppCompat.Display1"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="7" />

		<TextView
			android:id="@+id/labelRouteTime"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textAppearance="@style/TextAppearance.AppCompat.Small"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="@+id/labelRouteName"
			app:layout_constraintHorizontal_bias="0.5"
			app:layout_constraintStart_toStartOf="@+id/labelRouteName"
			app:layout_constraintTop_toBottomOf="@+id/labelRouteName"
			android:text="@{@string/route_time_fmt(route.startTime)}"
			tools:text="Sosire: 17:25" />

	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>
